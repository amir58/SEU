<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.seu">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppThemeNoBar">
        <activity android:name="com.example.seu.PatientDetailsActivity"/>
        <activity android:name="com.example.seu.PatientActivity" />
        <activity android:name="com.example.seu.CampaignsActivity" />
        <activity android:name="com.example.seu.DonorDateAndTimeActivity"
            android:launchMode="singleInstance"/>
        <activity android:name="com.example.seu.CampaignsDateAndTimeActivity" />
        <activity android:name="com.example.seu.DonorTypeActivity"
            android:launchMode="singleInstance"/>
        <activity android:name="com.example.seu.QuestionnaireActivity"
