<!--        <activity android:name=".deprecated.LoginActivity" />-->
        <activity android:name="com.example.seu.MainActivity"
            android:theme="@style/AppTheme"
            android:label="@string/app_name"/>

        <activity
            android:name="com.example.seu.SplashActivity"
            android:theme="@style/AppThemeNoBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".CardActivity"/>
        <activity android:name=".CardDetailsActivity"/>
    </application>

</manifest>